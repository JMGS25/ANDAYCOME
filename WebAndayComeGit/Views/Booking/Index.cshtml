@model IEnumerable<WebAndayCome.Models.BookingViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reservas</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Guest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hour)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Guest)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hour)
    </td>
    <td>
        @Html.ActionLink("Mis reservas", "MisReservas", new { email = item.IdCliente }) |
        @Html.ActionLink("Comprobar reservas", "ComprobarReservas", new { id = item.Restaurante }) |
    </td>
</tr>
}

</table>
