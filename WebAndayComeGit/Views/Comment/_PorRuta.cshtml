@model IEnumerable<WebAndayCome.Models.CommentViewModel>


<h2>Comentarios de la ruta</h2>
<hr />
<section style="background-color: #457B9D; display:flex; padding: 1em;">
    ">
    @foreach (var item in Model)
    {

        <p><strong>Autor: </strong>@Html.DisplayFor(modelItem => item.Name)</p>
        <p class="bigger">@Html.DisplayFor(modelItem => item.Content)</p>
        <p><strong>Hora: </strong>@Html.DisplayFor(modelItem => item.Time)</p>

    }
</section>


<style>
    .boton {
        background-color: #61C2E2;
        border-radius: .2em;
        border-color: #61C2E2
    }

        .boton:hover {
            background-color: #61DBE2;
        }

    .crear {
        color: #61C2E2;
    }

        .crear:hover {
            color: #61DBE2;
        }

    .otros {
        color: #A8DADC;
    }

        .otros:hover {
            color: #CEDADC;
        }

    .row {
        background-color: #457B9D;
        border-radius: .5em;
    }

    .img {
        height: 140px;
        margin: .3em
    }

        .img:hover {
            transform: scale(1.15);
        }

    h3, p {
        text-align: left;
        padding: 1em;
        margin: 0;
    }

    h3 {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: black;
    }

    p {
        padding: .5em 0 0 0;
        color: #F1FAEE;
    }

    hr {
        display: block;
        height: 1px;
        border: 0;
        border-top: 1px solid #ccc;
        margin: 1em 0;
        padding: 0;
    }

    section {
        border-radius: .5em;
    }
</style>

