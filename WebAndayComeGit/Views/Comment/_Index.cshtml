@model IEnumerable<WebAndayCome.Models.CommentViewModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Route)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <a href="/Routes/Details/@item.Route.Id">
            @Html.DisplayFor(modelItem => item.Route.Name)
            <img height="140" alt="foto de la ruta" src="@Html.DisplayFor(modelItem => item.Route.Photo)" />
        </a>
           
    </td>
</tr>
}

</table>
