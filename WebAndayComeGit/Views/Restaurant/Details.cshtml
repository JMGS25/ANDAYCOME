@using WebAndayCome.Models
@model WebAndayCome.Models.RestaurantViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<hr />

<img height="400" alt="foto de restaurante" src="@Html.DisplayFor(modelItem => Model.Photo)" />

<p> <strong>Ciudad :</strong> @Model.City</p>

<p> <strong>Calle : </strong>@Model.Street</p>

<p> <strong>Capacidad :</strong> @Model.Capacity</p>

<p> <strong>Tags :</strong> <a href="/Tag"> @Model.Tags </a></p>



<h3> Menu: </h3>

<img height="400" alt="foto de restaurante" src="@Html.DisplayFor(modelItem => Model.Menu)" />

<br><br>
<p>¿Quieres recibir mensajes de este restaurante?</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Suscribirse" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>


